<%- include("../partials/header"); %>

    <div class="container">
        <div class="row">
            <div class="col">             
                <h1 class="mt-5">Editar Produto</h1>
                <form action="/estoque/editarProduto" method="POST">
                <div class="form-group">
                    <label for="cod_estoque">Código</label>
                    <input class="form-control" id="cod_estoque" type="text" name="cod_estoque" placeholder="Código do produto" value="<%= resultado.cod_estoque %>" >
                </div>
                <div class="form-group">
                    <label for="produto_estoque">Produto</label>
                    <input class="form-control" id="produto_estoque" type="text" name="produto_estoque" placeholder="Nome do produto" value="<%= resultado.produto_estoque %>" >
                </div>
                <div class="form-group">
                    <label for="preco_estoque">Preço</label>
                    <input class="form-control" id="preco_estoque" type="text" name="preco_estoque" placeholder="Valor do produto" value="<%= resultado.preco_estoque %>">
                </div>
                <div class="form-group">
                    <label for="quant_estoque">Quantidade no estoque </label>
                    <input class="form-control" id="quant_estoque" type="number" name="quant_estoque" placeholder="Quantidade no estoque" value="<%= resultado.quant_estoque %>" >
                </div>
                <input type="hidden" name="id" value="<%= resultado._id %>">  
                <button class="btn btn-outline-primary" type="submit">Enviar</button>
            </form>
            </div>
        </div>
    </div>

<%- include("../partials/footer"); %>