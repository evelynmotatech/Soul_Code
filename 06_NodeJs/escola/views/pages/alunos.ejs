<%- include("../partials/header"); %>

<section class="container">
    <div class="row">
        <div class="col">
            <div class="row mt-5">
                <h1>Lista de Alunos</h1>
            </div>
            <div>
                <input class="form-control col-12" type="text" id="myInput" onkeyup="pesquisarAluno()"
                    placeholder="Pesquisar por nome">
            </div>
            <table class="table table-hover" id='myTable'>
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Idade</th>
                        <th>Série</th>
                        <th>Sala da turma</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(resultado == 0){ %>
                    <tr>
                        <td colspan="5" class="alert alert-warning">Nenhum aluno cadastrado</td>
                    </tr>
                    <%}else{ resultado.forEach(function(aluno){ %>
                    <tr>
                        <td> <%= aluno.nome %> </td>
                        <td> <%= aluno.idade %> </td>
                        <td> <%= aluno.serie %> </td>
                        <td> <%= aluno.turma %> </td>
                        <td>
                            <a href="/alunos/editarAluno/<%=aluno._id %>" class="btn btn-outline-warning">Editar</a>
                            <a href="/alunos/deletarAluno/<%=aluno._id %>" class="btn btn-outline-danger">Apagar</a>
                        </td>
                    </tr>
                    <% })} %>
                </tbody>
            </table>
        </div>
    </div>
</section>

<%- include("../partials/footer"); %>
<%- include("../partials/search.ejs"); %>