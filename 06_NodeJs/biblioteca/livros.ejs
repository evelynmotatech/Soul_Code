<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">    
    <title>Lista de Livros</title>
    <style>
        a{
            text-decoration: none;
            color: black;
        }
    </style>
</head>
<body>
    <section class="container">
        <button type="submit" class="btn btn-dark ml-2 mr-2" id="mostrarLista">Logar</button>
        <div class="modal" tabindex="-1" id="mostra">
            <div class="modal-dialog" style="background-color: rgb(209, 210, 211);">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Login</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body" style="background-color: rgb(164, 165, 167);">
                    <form action="">
                        <label for="login_nome">Usuário</label>
                        <input type="text" id="login_nome" name="login_nome" class="form-control">

                        <label for="senha">Senha</label>
                        <input type="password" name="senha" id="senha" class="form-control">
                    </form>
                </div>
                <div class="modal-footer">
                  <button type="submit" class="btn btn-primary" data-dismiss="modal" id="logar">Logar</button>
                </div>
              </div>
            </div>
          </div>
        <div class="row">
            <div class="col">
                <div class="row mt-5">
                    
                    <div class="col-12">
                        <h1 class="col-12 text-center">Lista de Livros</h1>                        
                    </div>
                    <div class="col-12 d-flex flex-wrap">
                        <a href="/cadastrarLivros" class="btn btn-outline-dark mx-2">Inserir livros</a>
                        <input class="mx-2" type="text" id="myInput" onkeyup="pesquisarLivro()" placeholder="Pesquisar por título">
                        <a href="/" class="btn btn-outline-dark mx-2">Inicio</a>
                        
                    </div>
                </div>
                <table id='myTable' class="table table-hover" >
                    <thead>
                        <tr>
                            <th>Título</th>
                            <th>Autor</th>
                            <th>Ano de Publicação</th>
                            <th>Editora</th>
                            <th>Gênero</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(livro_item == 0){ %>
                            <tr>
                                <td colspan="6" class="alert alert-warning">Nenhum livro cadastrado</td>
                            </tr>   
                        <%}else{ livro_item.forEach(function(livro){ %>
                            <tr>
                                <td> <%= livro.titulo %> </td>
                                <td> <%= livro.nomeAutor %> </td>
                                <td> <%= livro.anoPublicacao %> </td>
                                <td> <%= livro.editora %> </td>
                                <td> <%= livro.genero %> </td>
                                <td>
                                    <a href="atualizarLivros/<%=livro._id %>" class="btn btn-outline-warning esconder">Editar</a>
                                    <a href="deletarLivro/<%=livro._id %>" class="btn btn-outline-danger esconder">Apagar</a>
                                </td>
                            </tr>
                        <% })} %>
                    </tbody>
                    
                </table>
            </div>
        </div>
    </section>



    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
   <script src="/js/search.js"></script>
</body>
</html>